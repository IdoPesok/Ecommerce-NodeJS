<% include ../partials/header %>

<div class="row">
    <div id="commentForm">
        <form action="/products/<%= product._id %>/reviews" method="post">
        	<h2 class="text-center">Review <%= product.name %></h2>
            <div class="form-group">
                <textarea name="text" placeholder="Text: " class="form-control" style="height: 200px;"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/products/<%= product._id %>" class="btn btn-light">Back</a>
    </div>
</div>

<% include ../partials/footer %>