<% include ../partials/header %>

<h1 class="text-center" id="top-buffer">Featured Products</h1>
<hr>
<hr>
<div class="row">
	<% products.forEach(function(product) { %>
		<div class="col-md-4">
			<div class="card text-white bg-dark" style="margin-bottom: 15px;">
				<img class="card-img-top" src="<%= product.image %>" alt="Card image cap">
				<div class="card-body">
					<h4 class="card-title"><%= product.name %></h4>
					<p class="card-text"><%= product.description.substring(0, 150) %>...</p>
					<p>$ <%= product.price %></p>
					<p><em>Sold By: <%= product.storename %></em></p>
					<a href="/products/<%= product.id %>" class="btn btn-primary">View</a>
				</div>
			</div>
		</div>
	<% }) %>
</div>
<hr id="bottom-buffer">

<% include ../partials/footer %>